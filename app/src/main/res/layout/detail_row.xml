<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/main"
    android:layout_marginRight="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_3sdp"
    android:background="#ffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:visibility="gone"
            android:padding="3sp" >

            <com.tsysinfo.billing.ResizableImageView
                android:id="@+id/list_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/noimage"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.90"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/productid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Code"
                        android:visibility="visible"
                        android:textColor="#343434"
                        android:textStyle="italic"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"

                        android:layout_marginLeft="@dimen/_4sdp"
                        android:textColor="@color/water"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                </LinearLayout>


            </LinearLayout>




            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center|right"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="3"
                            android:padding="2dp"
                            android:text="Qty:  "
                            android:textColor="#343434"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/productQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@color/Transperent"
                            android:ems="2"
                            android:enabled="false"
                            android:gravity="center|right"
                            android:inputType="phone|number"
                            android:text="9.9"
                            android:textColor="#343434"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="3"
                            android:padding="2dp"
                            android:text="Qty:  "
                            android:textColor="#343434"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/productQ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@color/Transperent"
                            android:ems="3"
                            android:enabled="false"
                            android:gravity="center|right"
                            android:inputType="phone|number"
                            android:text="9.9"
                            android:textColor="#343434"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Disc %:  "
                            android:textColor="#343434"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/productDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittextstyle"
                            android:ems="3"
                            android:gravity="center"
                            android:inputType="phone|number"
                            android:padding="2dp"
                            android:text="0"
                            android:textColor="#343434"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="3"
                            android:padding="2dp"
                            android:visibility="gone"
                            android:text="Rate :  "
                            android:textColor="#343434"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/rate"
                            android:layout_marginRight="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/Transperent"                        android:ems="4"
                            android:gravity="center|right"
                            android:enabled="false"
                            android:inputType="phone|number"
                            android:text="0"
                            android:textColor="#343434"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:visibility="gone"
                            android:singleLine="true"
                            android:ems="6"
                            android:text="Gross Value : "
                            android:textColor="#343434"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/productGross"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:ems="5"
                            android:gravity="center|right"
                            android:background="@color/Transperent"                        android:textColor="#343434"
                            android:textSize="14sp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GST (%) :"
                            android:singleLine="true"
                            android:padding="2dp"
                            android:ems="4"
                            android:layout_marginRight="10dp"
                            android:textColor="#343434"
                            android:visibility="gone"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/productGst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:ems="3"
                            android:gravity="center|right"
                            android:background="@color/Transperent"                        android:textColor="#343434"
                            android:visibility="visible"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:ems="5"
                            android:visibility="gone"
                            android:text="Gst :  "
                            android:textColor="#343434"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/actualGstValue"
                            android:layout_marginRight="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/Transperent"                        android:ems="6"
                            android:gravity="center|right"
                            android:enabled="false"
                            android:inputType="phone|number"
                            android:text="0"
                            android:textColor="#343434"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Disc: "
                            android:textColor="#343434"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/productDiscPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="0.0"
                            android:textColor="#343434"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:ems="3"
                            android:text="MRP: "
                            android:textColor="#343434"
                            android:textSize="12sp" />


                        <EditText
                            android:id="@+id/productMRP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittextstyle"
                            android:ems="5"
                            android:enabled="false"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:inputType="numberDecimal"
                            android:padding="2dp"
                            android:textColor="#343434"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical" >



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Total Amount: "
                            android:singleLine="true"
                            android:ems="8"
                            android:visibility="gone"
                            android:textColor="#343434"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/tot"
                            android:ems="5"
                            android:gravity="center|right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/Transperent"                        android:text="99999999.99"
                            android:textColor="#343434"
                            android:textSize="14sp"
                            />





                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>













            <TextView
                android:id="@+id/productPRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Description"
                android:textColor="#343434"
                android:visibility="gone"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center|bottom"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/list_button_style"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_marginRight="1dp"
                android:src="@drawable/del" />

            <TextView
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REMOVE"
                android:textColor="@color/green"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_marginRight="3dp"
                android:src="@drawable/confirm" />

            <TextView
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRM"
                android:textColor="@color/green"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageTick"
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/confirm" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:visibility="visible"
            android:orientation="horizontal" >


        </LinearLayout>
    </LinearLayout>

</LinearLayout>