<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tsysinfo.billing.OrderListActivity">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/sr"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:hint="Search by customer"
        android:padding="@dimen/_8sdp"
        android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:id="@+id/ll"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:padding="3dip" >

            <TextView
                android:id="@+id/productId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/orderNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order No"
                    android:textColor="@color/water"
                    android:layout_weight="1"
                    android:textSize="@dimen/_6sdp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:typeface="sans" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/ordDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Date"
                    android:gravity="center"
                    android:textColor="@color/water"
                    android:layout_weight="1"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/custName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/water"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SalesMan: "
                    android:textColor="#343434"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/salesman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10%"
                    android:textColor="#343434"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/productTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Amt"
                    android:textColor="@color/water"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/productTransType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Type"
                    android:textColor="@color/water"
                    android:textSize="@dimen/_6sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_2sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Action"
                    android:textColor="@color/water"
                    android:textSize="@dimen/_6sdp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:typeface="sans"
                    />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linerlayout">

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/ll"
            android:layout_marginRight="10dp"
            android:divider="#4d4d4d"
            android:dividerHeight="1dp" />
    </LinearLayout>


</LinearLayout>
