<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:elevation="4dp"
    android:layout_margin="15dp"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/ststusColor"
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customerNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Name"
                android:textColor="@color/water"
                android:textSize="15dip"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/customerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address of Customer"
                android:textColor="#343434"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/customerContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact No"
                    android:layout_weight="1"
                    android:textColor="#343434"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/flag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location Not Found"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:textColor="#ff0707"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="bottom"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <com.tsysinfo.billing.ResizableImageView
                    android:id="@+id/printBarcode"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/barcodeprint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <com.tsysinfo.billing.ResizableImageView
                    android:id="@+id/uploadLocation"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_margin="3dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/upload" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:layout_marginLeft="1dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <com.tsysinfo.billing.ResizableImageView
                    android:id="@+id/customerMap"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:src="@drawable/maps" />

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</LinearLayout>