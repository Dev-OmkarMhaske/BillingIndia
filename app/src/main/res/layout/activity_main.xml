<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/primary_dark">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/invoice"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffff"
                    android:weightSum="2" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btnCustList"
                        android:orientation="vertical"
                        android:background="@drawable/divider">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.30"
                            android:gravity="center">

                            <ImageView
                                android:scaleType="fitCenter"
                                android:background="@android:color/transparent"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/cust"/>
                            <!--<com.tsysinfo.billing.ResizableButton
                                android:id="@+id/btnReceipt"
                                style="@style/DashboardButtonCenter"
                                android:background="@drawable/btn_receipt"/>-->
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.70"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Cust List"
                                android:id="@+id/textViewcustvisitt"
                                android:textSize="25dp" />
                        </LinearLayout>

                    </LinearLayout>
                   <!-- Delivery Button Hidden-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:id="@+id/btnDelivery"
                        android:orientation="vertical"
                        android:background="@drawable/divider">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.30"
                            android:gravity="center">
                            <ImageView
                                android:scaleType="fitCenter"
                                android:background="@android:color/transparent"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/newdelivery"/>
                            <!--<com.tsysinfo.billing.ResizableButton
                                android:id="@+id/btnDelivery"
                                style="@style/DashboardButtonCenter"
                                android:background="@drawable/btn_delivery" />-->
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.70"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Delivery"
                                android:id="@+id/textView3"
                                android:textSize="30dp" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <!-- second row -->


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/accent"
                    android:visibility="visible" />


                <!--Third Row-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:weightSum="2"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btnReceipt"
                        android:orientation="vertical"
                        android:background="@drawable/divider">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.30"
                            android:gravity="center">

                            <ImageView
                                android:scaleType="fitCenter"
                                android:background="@android:color/transparent"
                                android:layout_width="120dp"
                                android:layout_height="120dp"

                                android:src="@drawable/newreciept"/>
                            <!--<com.tsysinfo.billing.ResizableButton
                                android:id="@+id/btnReceipt"
                                style="@style/DashboardButtonCenter"
                                android:background="@drawable/btn_receipt"/>-->
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.70"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Reciept"
                                android:id="@+id/textView7"
                                android:textSize="30dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btnReturn"
                        android:orientation="vertical"
                        android:background="@drawable/divider">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.30"
                            android:gravity="center">

                            <ImageView
                                android:scaleType="fitCenter"
                                android:background="@android:color/transparent"
                                android:layout_width="120dp"
                                android:layout_height="120dp"

                                android:src="@drawable/newreturn"/>
                          <!--  <com.tsysinfo.billing.ResizableButton
                                android:id="@+id/btnReturn"
                                style="@style/DashboardButtonCenter"
                                android:background="@drawable/btn_return" />-->
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.70"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Return"
                                android:id="@+id/textView8"
                                android:textSize="30dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/accent"
                    android:visibility="visible" />

                <!--Fourth Row-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:weightSum="2"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btnOrder"
                        android:background="@drawable/divider"
                        android:orientation="vertical"
                        >


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.30"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:saveEnabled="true"
                                android:src="@drawable/neworder1"/>

                            <!--   <com.tsysinfo.billing.ResizableButton
                                   android:id="@+id/btnOrder"
                                   style="@style/DashboardButtonCenter"
                                   android:background="@drawable/btn_order" />-->
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.70"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Order"
                                android:id="@+id/textView2"
                                android:textSize="30dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btnHelp"
                        android:orientation="vertical"
                        android:background="@drawable/divider">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.30"
                            android:gravity="center">
                            <ImageView
                                android:scaleType="fitCenter"
                                android:background="@android:color/transparent"
                                android:layout_width="120dp"

                                android:layout_height="120dp"
                                android:src="@drawable/newhelp"/>
                            <!--<com.tsysinfo.billing.ResizableButton
                                android:id="@+id/btnDelivery"
                                style="@style/DashboardButtonCenter"
                                android:background="@drawable/btn_delivery" />-->
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.70"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Help"
                                android:id="@+id/texthelpl"
                                android:textSize="30dp" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/accent"
                    android:visibility="visible" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:weightSum="2"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:id="@+id/btnBilling"
                        android:orientation="vertical"
                        android:background="@drawable/divider">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.30"
                            android:gravity="center">.
                            <ImageView
                                android:scaleType="fitCenter"
                                android:background="@android:color/transparent"
                                android:layout_width="120dp"

                                android:layout_height="120dp"
                                android:src="@drawable/newbilling1"/>

                            <!--   <com.tsysinfo.billing.ResizableButton
                                   android:id="@+id/btnBilling"
                                   style="@style/DashboardButtonCenter"
                                   android:background="@drawable/btn_billing" />-->
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.70"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Billing"
                                android:id="@+id/textView5"
                                android:textSize="30dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"

                        android:orientation="vertical"
                        android:background="@drawable/divider">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.30"
                            android:gravity="center">
                            <ImageView
                                android:scaleType="fitCenter"
                                android:background="@android:color/transparent"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:id="@+id/btnProducts"
                                android:src="@drawable/newlist2"/>

                            <!--<com.tsysinfo.billing.ResizableButton
                                android:id="@+id/btnProducts"
                                style="@style/DashboardButtonCenter"
                                android:background="@drawable/btn_product_info" />-->
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.70"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Products"
                                android:id="@+id/textView6"
                                android:textSize="30dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/btnSync"
                        android:background="@drawable/divider"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.30"
                            android:gravity="center" >

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:saveEnabled="true"
                                android:src="@drawable/prg" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.70"
                            android:gravity="center" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Sync"
                                android:id="@+id/textView11"
                                android:textSize="30dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/accent">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:weightSum="2"
                    android:visibility="visible" >



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:gravity="bottom|center"
                    android:background="@drawable/abarbottom"
                    >

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/footer"
                        android:id="@+id/textVi2"
                        android:textColor="@color/white"
                        android:gravity="bottom|center"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="empname"
                        android:id="@+id/textVi3"
                        android:textColor="@color/white"
                        android:gravity="bottom|center"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:itemIconTint="#ff1b6bae"
        android:background="#33b5e5"
        app:itemTextColor="#333"
        app:menu="@menu/navigation_view_item" />
</android.support.v4.widget.DrawerLayout>