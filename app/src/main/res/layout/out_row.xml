<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fcfbfb"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >


           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/custName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cust Name"
                    android:gravity="center"
                    android:textColor="@color/water"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/billpfx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XC"
                    android:gravity="center"
                    android:textColor="#343434"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/billNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:gravity="center"
                    android:textColor="#343434"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/SoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MU"
                    android:gravity="center"
                    android:textColor="#343434"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/billDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23/03/2016"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="#343434"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/totalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="500000"
                    android:gravity="center"
                    android:textColor="#343434"
                    android:textSize="@dimen/_6sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/PartPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PartPayment"
                    android:gravity="center"
                    android:textColor="#343434"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/Not_Appro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Approval"
                    android:gravity="center"
                    android:textColor="#343434"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>
           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/balanceAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="500000"
                    android:textColor="#343434"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/NetDue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:gravity="center"
                    android:textColor="#343434"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/Days"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Days"
                    android:textColor="#343434"
                    android:textSize="@dimen/_6sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal" >


                <EditText
                    android:id="@+id/editPayAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp"
                    android:ems="12"
                    android:visibility="visible"
                    android:hint="Enter Amount"
                    android:background="@drawable/squre"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:descendantFocusability="blocksDescendants"
                    android:inputType="text"
                    android:enabled="true"
                    android:padding="2dp"
                    android:textColor="#343434"
                    android:textSize="12sp" />
                <!--<EditText
                    android:id="@+id/editPayAmt"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="  Enter Pay Amount  "
                    android:enabled="true"
                    android:textSize="12sp"
                    android:inputType="numberDecimal"
                    />-->



                <TextView
                    android:id="@+id/btnConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Allocate"
                    android:visibility="visible"
                    android:layout_marginLeft="20dp"
                    android:textColor="#343434"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_gravity="left|center"
                    android:gravity="right|center">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:gravity="right|center"
                        android:focusableInTouchMode="false"
                        android:layout_gravity="left|center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>